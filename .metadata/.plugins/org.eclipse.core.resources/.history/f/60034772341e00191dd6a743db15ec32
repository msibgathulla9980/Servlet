package com.bridgelabz;

import java.io.IOException;
import java.util.ArrayList;
import java.util.List;

import javax.servlet.ServletException;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

@SuppressWarnings("serial")
public class LoginAndRegistrationServlet extends HttpServlet {
	List<RegistrationDetails> list=new ArrayList<RegistrationDetails>();
	List<LoginDetails> list1=new ArrayList<LoginDetails>();
@Override
protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws ServletException, IOException {
	@SuppressWarnings("unused")
	RegistrationDetails login=new RegistrationDetails();
	login.setFirstName(req.getParameter("firstName"));
	login.setLastName(req.getParameter("lastName"));
	login.setEmail(req.getParameter("email"));
	login.setPassword(req.getParameter("password"));
	login.setPhoneNumber(req.getParameter("phoneNumber"));
	list.add(login);
	display(login);
	}
void display(RegistrationDetails login) {
	System.out.println("The Entered Details are:");
	System.out.println("FirstName:"+login.getFirstName());
	System.out.println("LastName:"+login.getLastName());
	System.out.println("Email:"+login.getEmail());
	System.out.println("Password:"+login.getPassword());
	System.out.println("Mobile:"+login.getPhoneNumber());
}


}
